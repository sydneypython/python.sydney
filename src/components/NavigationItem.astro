---
const { href, label } = Astro.props;
---

<a href={href} class="group relative flex w-full items-center justify-between text-2xl font-light font-heading">
    <span>{label}</span>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
    </svg>
    <span class="absolute -bottom-0.5 left-0 w-0 transition-all duration-300 h-0.5 bg-primary-300 group-hover:w-full"></span>
</a>